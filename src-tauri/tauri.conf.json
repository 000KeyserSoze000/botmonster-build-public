{
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "BotMonster",
    "version": "2.2.6"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "scope": [
          "$APPCONFIG/*"
        ]
      },
      "path": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "process": {
        "relaunch": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "../icons/32x32.png",
        "../icons/128x128.png",
        "../icons/128x128@2x.png",
        "../icons/icon.icns",
        "../icons/icon.ico"
      ],
      "identifier": "com.botmonster.dev",
      "longDescription": "",
      "macOS": {
        "exceptionDomain": "",
        "frameworks": []
      },
      "resources": [],
      "shortDescription": "",
      "targets": [
        "all"
      ],
      "windows": {
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {},
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://example.com/update.json"
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "BotMonster - AI Trading Terminal",
        "width": 1440,
        "minWidth": 1024,
        "minHeight": 768
      }
    ]
  }
}