{
  "build": {
    "beforeDevCommand": "pnpm --prefix .. dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "BotMonster",
    "version": "2.3.9"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "scope": [
          "$APPCONFIG/*"
        ]
      },
      "path": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "process": {
        "relaunch": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "../icons/32x32.png",
        "../icons/128x128.png",
        "../icons/128x128@2x.png",
        "../icons/icon.icns",
        "../icons/icon.ico"
      ],
      "identifier": "com.botmonster.dev",
      "macOS": {
        "frameworks": []
      },
      "resources": [],
      "windows": {
        "digestAlgorithm": "sha256"
      }
    },
    "security": {
      "csp": "default-src 'self'"
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/tauri-apps/tauri-action/releases/latest/download/updater.json"
      ],
      "pubkey": "UNUSED_DURING_CI_WILL_BE_REPLACED"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "BotMonster - AI Trading Terminal",
        "width": 1440,
        "minWidth": 1024,
        "minHeight": 768
      }
    ]
  }
}